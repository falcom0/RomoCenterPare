<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:name="house.digital.pare.romocenter.SurveiActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SurveiActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonSS">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_survei_question"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/content_survei" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonSS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selesai"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>